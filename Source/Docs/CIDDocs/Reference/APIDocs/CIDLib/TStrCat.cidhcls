                        <MethParam  Name="psz2" Type="tCIDLib::TCh" PBy="CPtrC"/>
                    </MethParams>
                </MethVar>
            </Method>

            <Method Name="TStrCat">
                <Desc>
                    Takes the source object's buffer and leaves it with a null pointer so that it doesn't have anything to release.
                </Desc>
