Class=[NonFinal]
    ClassPath MEng.AsyncHTTPTest;
    ParentClass MEng.Object;
EndClass;

Imports=
    MEng.System.Runtime.AsyncHTTPCl;
    MEng.System.Runtime.ConsoleOutStream;
    MEng.System.Runtime.KVPair;
    MEng.System.Runtime.URL;
    MEng.System.Runtime.HTTPClient.LinesList;
EndImports;


Members=
    AsyncHTTPCl         m_Test;
    ConsoleOutStream    m_OutStrm;
    URL                 m_URL;
    LinesList           m_InHdrs;
    Time                m_TimeInfo;
EndMembers;


Methods=[Public,Final]

    Constructor()
    Begin
    EndConstructor;

    Method Start() Returns Int4
    Begin
        Locals=
            MemBuf      Content;
            Card4       ContLen;
            String      ContType;
            String      FinalURL;
            LinesList   OutHdrs;
            String      RepText;
            Card4       ResCode;
            String      ErrText;
        EndLocals;

        Try
            // m_URL.Set("http://www.google.com", FQTypes.Full);
            m_URL.Set("http://192.168.0.232", FQTypes.Full);

            m_InHdrs.RemoveAll();
            m_Test.StartGETRedir
            (
                "Test Query"
                , m_URL
                , 5000
                , "CML Test Async Client"
                , "text/html"
                , m_InHdrs
            );
        EndTry;

        Catch
            m_OutStrm.FmtStr("\nStart of GET failed.Error=\n");
            m_OutStrm.Format($Exception);
            m_OutStrm.DNewLn();
            Return 1;
        EndCatch;

        // It started up ok, so wait for the get to complete
        While (m_Test.GetStatus(False) = AsyncHTTPStates.Waiting)
            m_TimeInfo.Sleep(250);
        EndWhile;

        // Get the resulting output, or error
        Try
            ResCode := m_Test.GetOutput
            (
                RepText
                , OutHdrs
                , ContType
                , Content
                , ContLen
                , FinalURL
            );

            If (ResCode != 200)
            EndIf;
        EndTry;

        Catch
            m_OutStrm.FmtStr("\Getting output failed.Error=\n");
            m_OutStrm.Format($Exception);
            m_OutStrm.DNewLn();
            Return 1;
        EndCatch;

        Return 0;
    EndMethod;

EndMethods;
