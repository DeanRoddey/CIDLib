Class=[Final]
    ClassPath MEng.User.Search;
    ParentClass MEng.Object;
EndClass;

Imports=
    MEng.System.Runtime.ConsoleOutStream;
    MEng.System.Runtime.FileInStream;
EndImports;

Members=
    Card4               m_LineCounter;
    ConsoleOutStream    m_Output;
    FileInStream        m_InStream;
    String              m_ReadBuf;
EndMembers;

Methods=[Public,Final]

    Constructor() :
        m_LineCounter(0);
        m_Output();
        m_InStream();
        m_ReadBuf();
    Begin
    EndConstructor;

    Method Start() Returns Int4
    Begin
        If (m_InStream.Open("/Test.Txt"))

            // Output the file name that we are listing
            m_Output.FmtStr("Listing File: ");
            m_Output.FmtStr(m_InStream.GetFileName());
            m_Output.DNewLn();

            While (!m_InStream.EndOfStream())
                m_LineCounter.Inc();
                m_Output.SetJustify(StreamJustify.Right);
                m_Output.SetWidth(4);
                m_Output.FmtCard4(m_LineCounter);
                m_Output.SetWidth(0);
                m_Output.SetJustify(StreamJustify.Left);
                m_Output.FmtStr(". ");
                m_InStream.GetLine(m_ReadBuf);
                m_Output.FmtStr(m_ReadBuf);
                m_Output.NewLn();
            EndWhile;
            m_Output.NewLn();
        Else
            m_Output.FmtStr("ERROR: Couldn't open input file\n");
        EndIf;

        Return 0;
    EndMethod;

EndMethods;


